@model LivrariaControleEmprestimo.DATA.Models.Cliente

@{
    ViewData["Title"] = "Detalhes do Cliente";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Detalhes do Cliente</h1>
        <div class="btn-group">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success">
                <i class="fas fa-edit me-2"></i>Alterar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Voltar
            </a>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Informações do Cliente</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="info-group mb-4">
                        <label class="text-muted mb-2">
                            <i class="fas fa-user me-2"></i>
                            @Html.DisplayNameFor(model => model.Nome)
                        </label>
                        <p class="h5">@Html.DisplayFor(model => model.Nome)</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="info-group mb-4">
                        <label class="text-muted mb-2">
                            <i class="fas fa-id-card me-2"></i>
                            @Html.DisplayNameFor(model => model.Cpf)
                        </label>
                        <p class="h5">@Html.DisplayFor(model => model.Cpf)</p>
                    </div>
                </div>
            </div>

            <!-- Seção de Histórico (exemplo) -->
            <div class="mt-4">
                <h6 class="text-muted mb-3">Histórico de Empréstimos</h6>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    O histórico de empréstimos será implementado em breve.
                </div>
            </div>
        </div>
    </div>
</div>