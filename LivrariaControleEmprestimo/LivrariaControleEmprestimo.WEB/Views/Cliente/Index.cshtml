@model IEnumerable<LivrariaControleEmprestimo.DATA.Models.Cliente>

@{
	ViewBag.Title = "Cliente"; 
}

<h1>Cliente</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td class="row col-md d-inline-block">
                <a asp-action="Edit" class="btn btn-success m-1" asp-route-id="@item.Id">Editar</a> 
                <a asp-action="Details" class="btn btn-primary m-1" asp-route-id="@item.Id">Detalhes</a> 
                <a asp-action="Delete" class="btn btn-danger m-1" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
